<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <style type="text/css">
            body {
              padding-top: 60px;
              padding-bottom: 40px;
            }
            .sidebar-nav {
              padding: 9px 0;
            }

            @media (max-width: 980px) {
              /* Enable use of floated navbar text */
              .navbar-text.pull-right {
                float: none;
                padding-left: 5px;
                padding-right: 5px;
              }
            }
        </style>
        {% stylesheets
            '@HezuWebBundle/Resources/bootstrap/css/bootstrap.css'
            '@HezuWebBundle/Resources/bootstrap/css/bootstrap-responsive.css'
        %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet">
        {% endstylesheets %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="brand" href="#">Hezu</a>
                </div>
          </div>
        </div>

        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span3">
                    {% block dock %}{% endblock dock %}
                </div>
                <div class="span6">
                    {% block primary %}{% endblock primary %}
                </div>
                <div class="span3">
                </div>
            </div>
         </div>

        {% endblock body%}
        {% block javascripts %}{% endblock %}
    </body>
</html>
